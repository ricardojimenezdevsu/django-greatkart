container_commands:
  01_migrate:
    command: |
      export $(cat /opt/elasticbeanstalk/deployment/env | xargs)
      source $PYTHONPATH/activate
      pipenv run python ./manage.py migrate
  02_createsuperuser:
    command: "echo \"from account.models import Account; Account.objects.create_superuser('super', 'user', 'superuser@mail.com', 'superuser', '12345')\" | python manage.py shell"
    leader_only: true
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: greatkart.settings